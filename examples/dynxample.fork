import dyn
import err
import proc
import tty
import utils


entry

  mut error ptr err:Error
  mut libc = dyn:sobjNew("/lib/libc.so.6", ptr error)

  if libc == null
    tty:err("error: ")
    tty:errln(error'msg)

    proc:exit(1)
  /if

  mut puts = cast<ptr func(str ptr uint8)>(dyn:sobjGetSym(libc, "puts", ptr error))

  if libc == null
    tty:err("error: ")
    tty:errln(error'msg)

    proc:exit(2)
  /if

  puts("test")

  dyn:sobjFree(libc)

/entry
