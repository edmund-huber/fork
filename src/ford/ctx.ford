module ctx

import spring
import synt

alias Context struct (
  fordPaths ptr spring:Vector,
  imports ptr spring:Map,
  currentFile ptr uint8
)

decl contextFree func(ctx ptr Context)
decl contextImport func(ctx ptr Context, importName ptr synt:StringDef, value ptr ptr synt:PNode) ptr spring:Vector
decl contextImportAll func(ctx ptr Context, imports ptr spring:Vector) ptr spring:Vector
decl contextSetCurrentFile func(ctx ptr Context, filename ptr uint8)
decl contextNew func() ptr Context
