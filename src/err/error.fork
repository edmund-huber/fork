module err


import err
import mem
import txt


func errorFree(err ptr err:Error)
  if err != null
    mem:free(err'msg)
    mem:free(err)
  /if
/func


func errorMsg(err ptr err:Error) ptr uint8
  if err != null
    return err'msg
  /if

  return null
/func


func errorNew(str ptr uint8) ptr err:Error
  mut err = <ptr err:Error>(mem:alloc(size(err:Error)))
  err'msg = txt:strclone(str)
  return err
/func


func errorGlue(strs ptr ptr uint8) ptr err:Error
  mut err = <ptr err:Error>(mem:alloc(size(err:Error)))
  err'msg = txt:strglue(strs)
  return err
/func
